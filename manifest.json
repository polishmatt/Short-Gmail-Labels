{
  "name": "Short Gmail Labels",
  "version": "1.0.1",
  "description": "Shorten your Gmail labels so parent labels are not displayed.",
  "icons": { 
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "all_frames": true,
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "*://mail.google.com/*"
  ]  ,
  "manifest_version": 2
}
